<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Estado3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/horita3"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:layout_gravity="center"
            android:text="Ajustar el tono de la alarma" />

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="381dp"
            android:layout_height="570dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="300dp"
                    android:layout_height="400dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="vertical">


                    <RadioButton
                        android:id="@+id/tono1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Detección de movimiento (Acelerometro)" />

                    <RadioButton
                        android:id="@+id/tono2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Supervisión de la temperatura" />

                    <RadioButton
                        android:id="@+id/tono3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Detección de movimiento (Gravedad)" />

                    <RadioButton
                        android:id="@+id/tono4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Detección de movimiento (Giroscopio)"
                        app:layout_constraintEnd_toEndOf="@+id/luzBlanca"
                        tools:layout_editor_absoluteY="0dp" />

                    <RadioButton
                        android:id="@+id/tono5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sensor de luz"
                        app:layout_constraintEnd_toEndOf="@+id/luzBlanca"
                        tools:layout_editor_absoluteY="0dp" />

                    <RadioButton
                        android:id="@+id/tono6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Campo geomagnético ambiental de los tres ejes físicos" />

                    <RadioButton
                        android:id="@+id/tono7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sensor de proximidad" />


                </RadioGroup>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</FrameLayout>